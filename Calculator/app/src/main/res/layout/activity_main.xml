<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Display -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:text="0"
        android:textSize="36sp"
        android:gravity="end|center_vertical"
        android:background="#D9D9D9"
        android:padding="16dp" />

    <!-- Calculator Buttons -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_below="@id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="16dp">

        <!-- Row 1 -->
        <TableRow>
            <Button android:id="@+id/button7" android:text="7" android:layout_height="80dp"/>
            <Button android:id="@+id/button8" android:text="8" android:layout_height="80dp"/>
            <Button android:id="@+id/button9" android:text="9" android:layout_height="80dp"/>
            <Button android:id="@+id/buttonDivide" android:text="/" android:layout_height="80dp"/>
        </TableRow>

        <!-- Row 2 -->
        <TableRow>
            <Button android:id="@+id/button4" android:text="4" android:layout_height="80dp"/>
            <Button android:id="@+id/button5" android:text="5" android:layout_height="80dp"/>
            <Button android:id="@+id/button6" android:text="6" android:layout_height="80dp"/>
            <Button android:id="@+id/buttonMultiply" android:text="*" android:layout_height="80dp"/>
        </TableRow>

        <!-- Row 3 -->
        <TableRow>
            <Button android:id="@+id/button1" android:text="1" android:layout_height="80dp"/>
            <Button android:id="@+id/button2" android:text="2" android:layout_height="80dp"/>
            <Button android:id="@+id/button3" android:text="3" android:layout_height="80dp"/>
            <Button android:id="@+id/buttonSubtract" android:text="-" android:layout_height="80dp"/>
        </TableRow>

        <!-- Row 4 -->
        <TableRow>
            <Button android:id="@+id/buttonClear" android:text="C" android:layout_height="80dp"/>
            <Button android:id="@+id/button0" android:text="0" android:layout_height="80dp"/>
            <Button android:id="@+id/buttonEquals" android:text="=" android:layout_height="80dp"/>
            <Button android:id="@+id/buttonAdd" android:text="+" android:layout_height="80dp"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>
